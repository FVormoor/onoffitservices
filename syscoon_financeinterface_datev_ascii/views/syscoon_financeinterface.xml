<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="syscoon_financeinterface_form_view" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.form.view</field>
        <field name="model">syscoon.financeinterface</field>
        <field name="inherit_id" ref="syscoon_financeinterface.syscoon_financeinterface_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_ids']" position="attributes">
                <attribute name="required">mode == 'datev_ascii'</attribute>
            </xpath>
        </field>
    </record>
    <record id="syscoon_financeinterface_search_view" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.search.view</field>
        <field name="model">syscoon.financeinterface</field>
        <field name="inherit_id" ref="syscoon_financeinterface.syscoon_financeinterface_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="datev_ascii_moves" domain="[('mode', '=', 'datev_ascii')]" string="DATEV ASCII Moves"/>
            </xpath>
        </field>
    </record>
    <!-- Server Action for Recalculate Attendance Wizard -->
    <record id="action_reset_move_datev_values" model="ir.actions.server">
        <field name="name">Reset Datev Values in Moves</field>
        <field name="model_id" ref="model_syscoon_financeinterface"/>
        <field name="binding_model_id" ref="model_syscoon_financeinterface"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_assign_move_datev_values()
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="syscoon_financeinterface_xml_form_view" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.form.view</field>
        <field name="model">syscoon.financeinterface</field>
        <field name="inherit_id" ref="syscoon_financeinterface.syscoon_financeinterface_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mode']" position="after">
                <field name="xml_mode" invisible= "mode != 'datev_xml'" readonly= "state != 'draft'"/>
                <field name="xml_invoices" invisible= "mode != 'datev_xml'" readonly= "state != 'draft'"/>
                <field name="exclude_bedi_exported" invisible= "mode != 'datev_xml'" readonly= "state != 'draft'" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//page[@id='export_moves']" position="after">
                <page string="Invoices" invisible="not bedi_moves_ids">
                    <field colspan="2" nolabel="1" name="bedi_moves_ids"/>
                </page>
            </xpath>
        </field>
    </record>
    <record id="syscoon_financeinterface_tree_view" model="ir.ui.view">
        <field name="name">syscoon.financeinterface.tree.view</field>
        <field name="model">syscoon.financeinterface</field>
        <field name="inherit_id" ref="syscoon_financeinterface.syscoon_financeinterface_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_ids']" position="after">
                <field name="mode" column_invisible="1"/>
                <field name="xml_mode" invisible= "mode != 'datev_xml'"/>
                <field name="xml_invoices" invisible= "mode != 'datev_xml'"/>
            </xpath>
        </field>
    </record>
</odoo>

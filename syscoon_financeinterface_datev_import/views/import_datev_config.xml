<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="syscoon_datev_import_config_list_view" model="ir.ui.view">
        <field name="name">syscoon.datev.import.config.list.view</field>
        <field name="model">syscoon.datev.import.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="encoding"/>
                <field name="delimiter"/>
                <field name="quotechar"/>
                <field name="headerrow"/>
                <field name="remove_datev_header"/>
            </list>
        </field>
    </record>

    <record id="syscoon_datev_import_config_form_view" model="ir.ui.view">
        <field name="name">Import Datev Config Form View</field>
        <field name="model">syscoon.datev.import.config</field>
        <field name="arch" type="xml">
            <form string="Import Datev Config">
                <sheet>
                    <h1 class="mt0">
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="encoding"/>
                            <field name="delimiter"/>
                            <field name="quotechar"/>
                            <field name="headerrow"/>
                            <field name="remove_datev_header"/>
                            <field name="discount_account_income"/>
                            <field name="discount_account_expenses"/>
                            <field name="ref"/>
                            <field name="ignore_incomplete_moves"/>
                            <field name="post_moves"/>
                            <field name="auto_reconcile"/>
                            <field name="payment_difference_handling" invisible="not auto_reconcile" required="auto_reconcile"/>
                        </group>
                    </group>
                    <field name="import_config_row_ids">
                        <list>
                            <field name="name"/>
                            <field name="assignment_type"/>
                            <field name="required"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="syscoon_datev_import_assignment_list_view" model="ir.ui.view">
        <field name="name">Import Datev assignment list view</field>
        <field name="model">syscoon.datev.import.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    <record id="syscoon_datev_import_assignment_form" model="ir.ui.view">
        <field name="name">Import Datev assignment form view</field>
        <field name="model">syscoon.datev.import.assignment</field>
        <field name="arch" type="xml">
            <form string="Assignment">
                <sheet>
                    <h1 class="mt0">
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="field_type"/>
                            <field name="object"/>
                            <field name="field"/>
                            <field name="domain"/>
                            <field name="default"/>
                            <field name="account_move_field"/>
                            <field name="account_move_line_field"/>
                            <field name="padding"/>
                            <field name="date_format"/>
                            <field name="decimal_sign"/>
                            <field name="skip_at"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

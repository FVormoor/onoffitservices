<odoo>

    <record id="syscoon_datev_import_log_form_view" model="ir.ui.view">
        <field name="name">syscoon.datev.import.log.form</field>
        <field name="model">syscoon.datev.import.log</field>
        <field name="arch" type="xml">
            <form string="Log-Line">
                <group>
                    <field name="date"/>
                    <field name="line"/>
                    <field name="name"/>
                    <field name="state"/>
                </group>
            </form>
        </field>
    </record>

    <record id="syscoon_datev_import_log_list_view" model="ir.ui.view">
        <field name="name">syscoon.datev.import.log.list.view</field>
        <field name="model">syscoon.datev.import.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="line"/>
                <field name="name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="syscoon_datev_import_form_view" model="ir.ui.view">
        <field name="name">syscoon.datev.import.form</field>
        <field name="model">syscoon.datev.import</field>
        <field name="arch" type="xml">
            <form string="Datev Import">
                <header>
                    <button string="Import" name="start_import" type="object" invisible="state != 'draft'"/>
                    <button string="Confirm" name="confirm_moves" type="object" invisible="state != 'imported'"/>
                    <button string="Reset" name="reset_import" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet string="Datev Import">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="template_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="journal_id" domain="[('company_id', '=', company_id)]"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Datev Import Log">
                            <field colspan="4" name="log_line">
                                <list decoration-warning="state == 'warning'" decoration-danger="state == 'error'">
                                    <field name="date"/>
                                    <field name="line"/>
                                    <field name="name"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Moves">
                            <field colspan="4" name="account_move_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <record id="syscoon_datev_import_list_view" model="ir.ui.view">
        <field name="name">syscoon.datev.import.list.view</field>
        <field name="model">syscoon.datev.import</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="template_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="journal_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

</odoo>

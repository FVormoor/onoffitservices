<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="external_layout_din5008_inherit"
        inherit_id="l10n_din5008.external_layout_din5008"
        priority="100"
    >

        <!-- Override the img t-att-style attribute -->
        <xpath
            expr="//table[hasclass('company_header','table-borderless')]//img"
            position="attributes"
        >
            <attribute name="t-att-style">'margin-top:10mm;width:50mm'</attribute>
        </xpath>
        <!-- Add font-size styling to the colored address section -->
        <xpath expr="//div[hasclass('colored_address')]" position="attributes">
            <attribute name="style">font-size:7px</attribute>
        </xpath>
        <!-- Modify company details font size -->
        <xpath expr="//div[hasclass('company_details')]" position="attributes">
            <attribute name="style">font-size:10px</attribute>
        </xpath>
        <!-- Hide the original footer table -->
        <xpath expr="//div[hasclass('company_details')]//table" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>
        <!-- Add new footer after the hidden one -->
        <xpath expr="//div[hasclass('company_details')]" position="inside">
            <table class="table-borderless">
                <tr>
                    <td width="25%">
                        <ul class="list-inline">
                            <li t-if="company.name"><span t-field="company.name" /></li>
                            <li t-if="company.street"><span
                                    t-field="company.street"
                                /></li>
                            <li t-if="company.street2"><span
                                    t-field="company.street2"
                                /></li>
                            <li><span t-if="company.zip" t-field="company.zip" /> <span
                                    t-if="company.city"
                                    t-field="company.city"
                                /></li>
                            <li t-if="company.country_id"><span
                                    t-field="company.country_id.name"
                                /></li>
                        </ul>
                    </td>
                    <td>
                        <ul class="list-inline">
                            <li t-if="company.phone"><span
                                    t-field="company.phone"
                                /></li>
                            <li t-if="company.email"><span
                                    t-field="company.email"
                                /></li>
                            <li t-if="company.website"><span
                                    t-field="company.website"
                                /></li>
                        </ul>
                    </td>
                    <td>
                        <ul class="list-inline">
                            <li t-if="company.vat"><t
                                    t-out="company.account_fiscal_country_id.vat_label or 'Tax ID'"
                                />:
                                <span t-if="forced_vat" t-out="forced_vat" />
                                <span t-else="" t-field="company.vat" />
                            </li>
                            <li>HRB Nr: <span t-field="company.company_registry" /></li>
                            <li t-if="company.managing_director">Management: <span
                                    t-field="company.managing_director"
                                /></li>
                        </ul>
                    </td>
                    <td>
                        <ul class="list-inline" t-if="company.partner_id.bank_ids">
                            <t t-foreach="company.partner_id.bank_ids[:2]" t-as="bank">
                                <li><span t-field="bank.bank_id.name" /></li>
                                <li>IBAN: <span t-field="bank.acc_number" /></li>
                                <li>BIC: <span t-field="bank.bank_id.bic" /></li>
                            </t>
                        </ul>
                    </td>
                </tr>
            </table>
        </xpath>

    </template>
</odoo>
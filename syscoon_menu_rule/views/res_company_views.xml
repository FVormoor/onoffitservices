        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Restricted Menus" name="restricted_menus">
                    <group>
                        <field name="restrict_menu_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
